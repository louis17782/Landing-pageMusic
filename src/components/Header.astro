---
import logo from "../assets/image/logo.png";
import name  from "../assets/image/name.png";
---
<header id="home">
  <!-- <img src={logo.src} alt=""> -->
  <div class="content-box"> 
    <!-- <img src={name.src} alt=""> -->
  </div>
</header>


<style lang="scss">
  @use '../assets/sass/index' as *;

  header {
    background-image: url("../assets/image/movil.png");
    background-repeat: no-repeat;
    background-position: center center;
    background-size: cover;
    width: 100%;
    height: 60vh;
  }

  .content-box {
    display: flex;
    justify-content: left;
    text-align: left; 

    h1 {
      margin-top: 100px;
    }
  }
  

  @media only screen and (min-width: 1024px) {

    header {
      background-image: url("../assets/image/desk.png");
      background-size: contain;
      background-position: center center;
      overflow: hidden;
      height: 80vh;
    }

    h1 {
      margin-top: 100px;
      font-size: 2rem;
      margin: 0 9%;
    }
  }
</style>
