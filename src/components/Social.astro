---
import pipo from "../assets/image/pipo.png"
import conexion from "../assets/image/conexion.png"
---
<section id="media">
  <h2>SOCIAL</h2>
  <div class="underline"></div>
  <figure>
    <a href="https://open.spotify.com/intl-es/artist/011RlZS72X5YMFxJPmfr7C?si=im3MCWXwSiCscrzHN4qsCw" target="_blank"><i class="ph-fill ph-spotify-logo"></i></a>
    <a href="https://www.youtube.com/@DjRaggart" target="_blank"><i class="ph-fill ph-youtube-logo"></i></a>
    <a href="https://tidal.com/browse/artist/14085152" target="_blank"><i class="ph-fill ph-tidal-logo"></i></a>
    <a href="https://www.deezer.com/mx/artist/5577174" target="_blank"><i class="ph-fill ph-equalizer"></i></a>
  </figure> 
  <p>&copy; D'MATA - developed by <a href="https://luissanteliz.dev/" target="_blank" rel="noopener noreferrer">Louis santeliz</a></p>
  </section>
<div class="radio-container">
    <div class="contents-row">
    <img src={pipo.src} alt="logo">
  </div>
  <iframe  src="https://player.radioking.io/raggart/?c=%232F3542&c2=%237BED9F&f=h&i=1&p=1&s=1&li=0&popup=0&plc=NaN&h=undefined&l=100&v=2&fullsize" style="border-radius: 5px; width: 100%; height: 145px;" frameBorder="0" >
  </iframe><script is:inline type="text/javascript" src="https://player.radioking.io/scripts/iframe.bundle.js"></script>
    <div class="contents-row">
    <img src={conexion.src} alt="logo">
  </div>
</div>

<style lang="scss">
  @use "../assets/sass/index" as *;

  section {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: black;
    padding-bottom: 80px;
  }

  i {
    font-size: 5rem;
    cursor: pointer;
    margin-left: 20px;
  }

  section p a {
    display: inline;
    font-size: 0.65rem;
  }

  a:hover {
    color: #FAB821;
    transition: color 0.3s, transform 0.3s;
  }

  p {
    margin: 20px;
    font-size: 0.75rem;
  }

  figure {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    margin: 0;

    i {
      margin: 0 20px;
      cursor: pointer;
      color: $yellow;
      transition: color 0.3s, transform 0.3s;
    }

    a:hover i {
      color: #026B41;
      transform: scale(1.2);
    }
  }

   .radio-container {
    position: fixed; 
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: #000; 
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center; 
    z-index: 10;
    transform: translateY(0);
    opacity: 1;
    transition: transform 0.35s ease, opacity 0.35s ease;
    will-change: transform, opacity;
  }
   .radio-container.collapsed {
    transform: translateY(110%);
    opacity: 0;
    pointer-events: none;
  }

  .contents-row {
    display: none;
  }

    @media only screen and (min-width: 820px)  {

    .radio-container img {
      width: 60px;
      height: 60px;
    }

    .contents-row {
      display: flex;
      justify-content: center;
      align-items: center;
      margin: auto 0px;
    }

    .contents-row img {
      margin: 0 0px;
    }
  }

  @media (min-width: 1024px) {

    section {
      padding-bottom: 200px;
    }

    section p a {
     font-size: 0.75rem;
    }

   .radio-container img {
      width: 90px;
      height: 90px;
    }

    .contents-row {
      display: flex;
      justify-content: center;
      align-items: center;
      margin: auto 80px;
    }

    .contents-row img {
      margin: 0 10px;
    }
  }

</style>
